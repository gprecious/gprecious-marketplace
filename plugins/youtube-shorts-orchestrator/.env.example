# YouTube Shorts Orchestrator 환경 변수

# ===== YouTube OAuth 2.0 (업로드용) =====
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_refresh_token_here

# ===== ElevenLabs TTS (텍스트 → 음성) =====
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id

# ===== AssemblyAI (음성 → 자막) =====
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# ===== 스톡 영상 (둘 중 하나 이상 권장) =====
PEXELS_API_KEY=your_pexels_api_key_here
PIXABAY_API_KEY=your_pixabay_api_key_here

# ===== AI 이미지/영상 생성 (선택) =====
OPENAI_API_KEY=your_openai_api_key_here
REPLICATE_API_TOKEN=your_replicate_token_here

# ===== 채널 ID 설정 =====
# 언어별 × 연령대별 채널 구조
# 형식: CHANNEL_{LANG}_{AGE}_ID

# 한국어 채널 (ko)
CHANNEL_KO_YOUNG_ID=UC...
CHANNEL_KO_MIDDLE_ID=UC...
CHANNEL_KO_SENIOR_ID=UC...

# 영어 채널 (en) - 확장 시 설정
CHANNEL_EN_YOUNG_ID=
CHANNEL_EN_MIDDLE_ID=
CHANNEL_EN_SENIOR_ID=

# 일본어 채널 (ja) - 확장 시 설정
CHANNEL_JA_YOUNG_ID=
CHANNEL_JA_MIDDLE_ID=
CHANNEL_JA_SENIOR_ID=

# ===== 작업 디렉토리 =====
SHORTS_WORK_DIR=/tmp/shorts
SHORTS_OUTPUT_DIR=./output

# ===== 로깅 =====
LOG_LEVEL=INFO
